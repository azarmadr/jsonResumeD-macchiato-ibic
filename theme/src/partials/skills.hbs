{{#if resume.skills.length}}
  <section aria-label="skills" class="container">
    {{> title value="Skills"}}
    {{#each resume.skills}}
      <div class="container">
	{{#if name}}
	  {{> section-header value=name}}
	{{/if}}
	{{#if level}}
	  <h4 class="bold capitalize">{{level}}</h4>
	{{/if}}
	{{#if keywords.length}}
	  <div class="minimal flex-container">
	    {{#each keywords}}
	      <h6 class="main-skill skill">{{.}}</h6>
	    {{/each}}
	  </div>
	{{/if}}
      </div>
    {{/each}}
  </section>
{{/if}}
