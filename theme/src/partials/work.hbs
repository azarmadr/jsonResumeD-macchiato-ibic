{{#if resume.work.length}}
  <section aria-label="work" class="container">
    {{> title value="Experience"}}

    {{#with resume.work}}
    <div>{{getTotalExperience this}}</div>
    {{/with}}
    {{#each resume.work}}
      <section class="item">
        {{#if name}}
          {{> section-header name=this.name}}
        {{/if}}
        {{#if company}}
          {{> section-header name=this.company }}
        {{/if}}

        {{#if position}}
          <h4>{{position}}</h4>
        {{/if}}

        {{#if keywords.length}}
          <div class="flex-container">
            {{#each keywords}}
              <h6 class="skill">{{.}}</h6>
            {{/each}}
          </div>
        {{/if}}

        {{#if summary}}
          <p class="summary">{{summary}}</p>
        {{/if}}

        {{#if highlights.length}}
          <ul>
            {{#each highlights}}
              <li>{{.}}</li>
            {{/each}}
          </ul>
        {{/if}}
      </section>
    {{/each}}
  </section>
{{/if}}
